<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>

<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.scene.effect.DropShadow?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cannapaceus.jfx.GraderController">

    <style>
        -fx-background-color: white;
    </style>

    <BorderPane fx:id="bpGraderView"
                VBox.vgrow="ALWAYS"
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0">
        <left>
            <VBox alignment="CENTER" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">

                <style>
                    -fx-background-color: #0077C8;
                </style>
                <children>
                    <JFXButton prefHeight="38.0"
                               prefWidth="80.0"
                               text="Home"
                               buttonType="RAISED"
                               focusTraversable="false">

                        <style>
                            -fx-background-color: white;
                            -fx-text-fill: black;
                        </style>

                    </JFXButton>

                    <JFXButton prefHeight="38.0"
                               prefWidth="80.0"
                               text="QBank"
                               buttonType="RAISED"
                               focusTraversable="false" >

                        <style>
                            -fx-background-color: white;
                            -fx-text-fill: black;
                        </style>

                    </JFXButton>

                    <JFXButton prefHeight="38.0"
                               prefWidth="80.0"
                               text="Settings"
                               buttonType="RAISED"
                               focusTraversable="false" >

                        <style>
                            -fx-background-color: white;
                            -fx-text-fill: black;
                        </style>

                    </JFXButton>

                    <JFXButton prefHeight="38.0"
                               prefWidth="80.0"
                               text="Help"
                               buttonType="RAISED"
                               focusTraversable="false" >

                        <style>
                            -fx-background-color: white;
                            -fx-text-fill: black;
                        </style>

                    </JFXButton>
                </children>
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
            </VBox>
        </left>
        <center>
        </center>
    </BorderPane>
</AnchorPane>
