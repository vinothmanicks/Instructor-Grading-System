<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.effect.DropShadow?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cannapaceus.jfx.CourseController"
            AnchorPane.topAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0">

    <ScrollPane fitToWidth="true"
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0">

        <VBox fx:id="vbCourse"
              fillWidth="true"
              spacing="10"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">

            <style>
                -fx-padding: 10, 10, 10, 10;
            </style>
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <JFXButton buttonType="RAISED" text="Back" onAction="#backClick">
                        <graphic>
                            <FontAwesomeIconView glyphName="ARROW_LEFT" glyphSize="20" glyphStyle="-fx-fill: white;"/>
                        </graphic>
                        <style>
                            -fx-background-color: #0077C8;
                            -fx-text-fill: white;
                        </style>
                    </JFXButton>
                    <Label fx:id="lblCourseName"/>
                </HBox>

                <VBox>
                    <style>
                        -fx-padding: 10, 10, 10, 10;
                        -fx-background-color: white;
                    </style>
                    <effect>
                        <DropShadow color="GRAY" offsetX="4.0" offsetY="4.0" />
                    </effect>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Students"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <JFXButton buttonType="FLAT" ripplerFill="white" onAction="#expand">
                            <graphic>
                                <FontAwesomeIconView glyphName="CHEVRON_RIGHT" glyphSize="20" glyphStyle="-fx-fill: grey;"/>
                            </graphic>
                            <style>
                                -fx-cursor: hand;
                            </style>
                        </JFXButton>
                    </HBox>

                    <VBox fx:id="vbStudents" spacing="10.0" visible="false" managed="false">

                        <style>
                            -fx-padding: 10, 20, 10, 20;
                        </style>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <JFXButton buttonType="RAISED" text="Add Student">
                                <graphic>
                                    <FontAwesomeIconView glyphName="PLUS" glyphSize="20" glyphStyle="-fx-fill: white;"/>
                                </graphic>
                                <style>
                                    -fx-background-color: #4CAF50;
                                    -fx-text-fill: white;
                                </style>
                            </JFXButton>
                        </HBox>

                    </VBox>
                </VBox>

                <VBox>
                    <style>
                        -fx-padding: 10, 10, 10, 10;
                        -fx-background-color: white;
                    </style>
                    <effect>
                        <DropShadow color="GRAY" offsetX="4.0" offsetY="4.0" />
                    </effect>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Assignments"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <JFXButton buttonType="FLAT" ripplerFill="white" onAction="#expand">
                            <graphic>
                                <FontAwesomeIconView glyphName="CHEVRON_RIGHT" glyphSize="20" glyphStyle="-fx-fill: grey;"/>
                            </graphic>
                            <style>
                                -fx-cursor: hand;
                            </style>
                        </JFXButton>
                    </HBox>

                    <VBox fx:id="vbAssignments" spacing="10.0" visible="false" managed="false">

                        <style>
                            -fx-padding: 10, 20, 10, 20;
                        </style>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <JFXButton buttonType="RAISED" text="Add Assignment">
                                <graphic>
                                    <FontAwesomeIconView glyphName="PLUS" glyphSize="20" glyphStyle="-fx-fill: white;"/>
                                </graphic>
                                <style>
                                    -fx-background-color: #4CAF50;
                                    -fx-text-fill: white;
                                </style>
                            </JFXButton>
                        </HBox>

                    </VBox>
                </VBox>

                <VBox>
                    <style>
                        -fx-padding: 10, 10, 10, 10;
                        -fx-background-color: white;
                    </style>
                    <effect>
                        <DropShadow color="GRAY" offsetX="4.0" offsetY="4.0" />
                    </effect>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Grades"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <JFXButton buttonType="FLAT" ripplerFill="white" onAction="#expand">
                            <graphic>
                                <FontAwesomeIconView glyphName="CHEVRON_RIGHT" glyphSize="20" glyphStyle="-fx-fill: grey;"/>
                            </graphic>
                            <style>
                                -fx-cursor: hand;
                            </style>
                        </JFXButton>
                    </HBox>

                    <VBox fx:id="vbGrades" spacing="10.0" visible="false" managed="false">

                        <style>
                            -fx-padding: 10, 20, 10, 20;
                        </style>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <JFXButton buttonType="RAISED" text="Add Grade">
                                <graphic>
                                    <FontAwesomeIconView glyphName="PLUS" glyphSize="20" glyphStyle="-fx-fill: white;"/>
                                </graphic>
                                <style>
                                    -fx-background-color: #4CAF50;
                                    -fx-text-fill: white;
                                </style>
                            </JFXButton>
                        </HBox>
                    </VBox>
                </VBox>
            </children>
        </VBox>
    </ScrollPane>
</AnchorPane>
